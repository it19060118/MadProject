<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:id="@+id/linearLayout">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:openDrawer="start">


        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/botomRelativeLay"
            app:layout_constraintTop_toTopOf="@id/linearLayout">

            <LinearLayout
                android:id="@+id/topLinearLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#737373"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/navBackBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_baseline_menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingEnd="50dp"
                    android:text="@string/home_title"
                    android:textAlignment="center"
                    android:textColor="#FFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="547dp"
                app:layout_constraintTop_toBottomOf="@id/topLinearLay"
                app:layout_constraintBottom_toTopOf="@+id/botomRelativeLay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:id="@+id/category1_pizza"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:paddingTop="0dp"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/category1_pizza_imgBtn"
                                android:layout_width="match_parent"
                                android:layout_height="167dp"
                                android:clickable="true"
                                android:contentDescription="@string/home_title"
                                android:src="@drawable/image_pizza" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/doppio_one"
                                android:shadowColor="#000000"
                                android:text="@string/category_pizza"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="24sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:id="@+id/category2_sides"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:paddingTop="0dp">

                            <ImageView
                                android:id="@+id/category2_sides_imgBtn"
                                android:layout_width="match_parent"
                                android:layout_height="167dp"
                                android:layout_marginTop="0dp"
                                android:contentDescription="@string/home_title"
                                android:scaleX="1.5"
                                android:scaleY="1.5"
                                android:src="@drawable/image_sides" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/doppio_one"
                                android:shadowColor="#000000"
                                android:text="@string/category_sides"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="24sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:id="@+id/category3_beverages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:paddingTop="0dp">

                            <ImageView
                                android:id="@+id/category3_beverages_imgBtn"
                                android:layout_width="match_parent"
                                android:layout_height="167dp"
                                android:layout_marginTop="0dp"
                                android:contentDescription="@string/home_title"
                                android:src="@drawable/image_bevarages" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/doppio_one"
                                android:shadowColor="#000000"
                                android:text="@string/category_beverages"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="24sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:id="@+id/category4_desserts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:paddingTop="0dp">

                            <ImageView
                                android:id="@+id/category4_desserts_imgBtn"
                                android:layout_width="match_parent"
                                android:layout_height="167dp"
                                android:layout_marginTop="0dp"
                                android:contentDescription="@string/home_title"
                                android:scaleX="1.5"
                                android:scaleY="1.5"
                                android:src="@drawable/image_desserts" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/doppio_one"
                                android:shadowColor="#000000"
                                android:text="@string/category_desserts"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="24sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </ScrollView>


        </LinearLayout>



        <com.google.android.material.navigation.NavigationView
            android:id="@+id/sideNavBar"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:paddingTop="70dp"
            android:paddingLeft="10dp"
            app:menu="@menu/nav_menu"
            tools:ignore="RtlCompat" />


    </androidx.drawerlayout.widget.DrawerLayout>


    <RelativeLayout
        android:id="@+id/botomRelativeLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.bottomnavigation.BottomNavigationView

            android:id="@+id/botmNavBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>










