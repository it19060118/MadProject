<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Displayed_Option_list">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#00FAF4F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/OrdHis_backIconTxt"
        android:src="@drawable/pizza_express_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="547dp"
        app:layout_constraintTop_toBottomOf="@id/titleImage"
        app:layout_constraintBottom_toTopOf="@+id/botomRelativeLay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="264dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/category1_pizza"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingTop="0dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/category1_pizza_imgBtn"
                        android:layout_width="match_parent"
                        android:layout_height="173dp"
                        android:clickable="false"
                        android:contentDescription="@string/home_title"
                        android:scaleX="1.5"
                        android:src="@drawable/slicey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/doppio_one"
                        android:shadowColor="#000000"
                        android:text="@string/msg1_des"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:fontFamily="@font/aclonica"
                android:text="1ST OPTION"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textSize="30sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F10505" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="247dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/category2_sides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <ImageView
                        android:id="@+id/category2_sides_imgBtn"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="@string/home_title"
                        android:scaleX="3"
                        android:src="@drawable/f1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/doppio_one"
                        android:shadowColor="#000000"
                        android:text="Sausage Delight"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/Add_to_cart_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#53A656"
                        android:clickable="true"
                        android:text="@string/add_to_cart"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/category3_beverages"
                    android:layout_width="393dp"
                    android:layout_height="258dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <ImageView
                        android:id="@+id/category3_beverages_imgBtn"
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="@string/home_title"
                        android:scaleX="2.9"
                        android:scaleY="0.9"
                        android:src="@drawable/f2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/doppio_one"
                        android:shadowColor="#000000"
                        android:text="BBQ Chicken"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button28"
                        android:layout_width="382dp"
                        android:layout_height="wrap_content"
                        android:background="#53A656"
                        android:clickable="true"
                        android:text="@string/add_to_cart"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:fontFamily="@font/aclonica"
                android:text="2ND OPTION"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textSize="30sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F10505" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="316dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/category4_desserts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <ImageView
                        android:id="@+id/category4_desserts_imgBtn"
                        android:layout_width="match_parent"
                        android:layout_height="167dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="@string/home_title"
                        android:scaleX="1.9"
                        android:src="@drawable/s3" />

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:fontFamily="@font/doppio_one"
                        android:text="Spicy Chicken Cheese Balls"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#53A656"
                        android:clickable="true"
                        android:text="@string/add_to_cart"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView61"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:fontFamily="@font/aclonica"
                android:text="@string/_3rd_option"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textSize="30sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F10505" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="@string/home_title"
                        android:scaleX="3"
                        android:src="@drawable/s4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/doppio_one"
                        android:shadowColor="#000000"
                        android:text="@string/chocolate_melt_lava_cake"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#53A656"
                        android:clickable="false"
                        android:text="@string/add_to_cart"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="305dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="234dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="147dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="@string/home_title"
                        android:scaleX="2.2"
                        android:src="@drawable/s5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/doppio_one"
                        android:shadowColor="#000000"
                        android:text="@string/milk_shakes_300ml"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#53A656"
                        android:text="@string/add_to_cart"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>
    <RelativeLayout
        android:id="@+id/botomRelativeLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.bottomnavigation.BottomNavigationView

            android:id="@+id/botmNavBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F5F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
